<div class="container-fluid d-flex justify-content-center">
  <form action="/restaurants" method="POST">
    <div class="mt-3 form-group">
      <label for="name">請輸入餐廳名稱</label>
      <input type="text" placeholder="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="name_en">請輸入餐廳英文名稱</label>
      <input type="text" placeholder="name_en" name="name_en" required>
    </div>
    <div class="form-group">
      <label for="category">請輸入餐廳類別</label>
      <input type="text" placeholder="category" name="category" required>
    </div>
    <div class="form-group">
      <label for="image">請輸入餐廳圖片連結網址</label>
      <input type="text" placeholder="image" name="image" required>
    </div>
    <div class="form-group">
      <label for="location">請輸入餐廳地址</label>
      <input type="text" placeholder="location" name="location" required>
    </div>
    <div class="form-group">
      <label for="phone">請輸入餐廳電話</label>
      <input type="text" placeholder="phone" name="phone" required>
    </div>
    <div class="form-group">
      <label for="google_map">請輸入餐廳google map網址</label>
      <input type="text" placeholder="google_map" name="google_map" required>
    </div>
    <div class="form-group">
      <label for="rating">請輸入餐廳評價</label>
      <input type="number" max="5" min="0" step="0.1" placeholder="rating" name="rating" required>
    </div>
    <div class="form-group">
      <label for="description">請輸入餐廳描述</label>
      <input type="text" placeholder="description" name="description" required>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">submit</button>
      <a href="/" class="btn btn-secondary ml-1">back</a>
    </div>

  </form>
</div>